{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "typecheck": "vue-tsc --noEmit",
        "preview": "vite preview",
        "lint": "eslint resources/js --ext .ts,.vue",
        "lint:fix": "eslint resources/js --ext .ts,.vue --fix",
        "format": "prettier --write \"resources/js/**/*.{ts,vue}\"",
        "format:check": "prettier --check \"resources/js/**/*.{ts,vue}\"",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "@types/node": "^24.9.1",
        "@typescript-eslint/eslint-plugin": "^8.20.0",
        "@typescript-eslint/parser": "^8.20.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "eslint": "^8.57.0",
        "eslint-plugin-vue": "^9.32.0",
        "husky": "^9.1.7",
        "laravel-vite-plugin": "^2.0.0",
        "lint-staged": "^15.3.0",
        "prettier": "^3.4.2",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.9.3",
        "vite": "^7.2.4",
        "vue-tsc": "^3.1.2"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.23",
        "@heroicons/vue": "^2.2.0",
        "@inertiajs/vue3": "^2.2.11",
        "@vee-validate/zod": "^4.15.1",
        "@vitejs/plugin-vue": "^6.0.2",
        "@vueuse/core": "^14.0.0",
        "pinia": "^2.3.1",
        "vee-validate": "^4.15.1",
        "vue": "^3.5.22",
        "vue-i18n": "^9.14.5",
        "zod": "^3.25.76"
    },
    "lint-staged": {
        "resources/js/**/*.{ts,vue}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.php": [
            "composer lint"
        ]
    }
}
